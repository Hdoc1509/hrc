---
import { Code, Tabs, TabItem } from "@astrojs/starlight/components"

const { sources } = Astro.props
---

<details>
  <summary>Show code</summary>

  <Tabs>
    <!-- @ts-ignore -->
    {sources.map(source => (
      <TabItem label={source.title}>
        <Code code={source.code} lang={source.lang ?? "tsx"} />
      </TabItem>
    ))}
  </Tabs>
</details>

<style>
  summary {
    cursor: pointer;
    user-select: none;
  }
</style>
