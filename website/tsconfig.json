{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "plugins": [
      {
        // Taken from https://docs.astro.build/en/guides/typescript/#setup
        "name": "@astrojs/ts-plugin"
      }
    ],

    "jsx": "react-jsx",
    "jsxImportSource": "react",

    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      // TODO: use @/demos instead of @demos
      "@demos/*": ["src/demos/*"]
    },
    "outDir": "dist"
  }
}
